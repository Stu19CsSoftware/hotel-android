<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aquamarine_main">

    <com.ranlychan.ktv.widget.SafeAreaFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/page_bg_light_white"
            tools:context=".activity.RoomOrderActivityMain">

            <com.hjq.bar.TitleBar
                android:id="@+id/tb_room_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aquamarine_main"
                app:barStyle="ripple"
                app:title="@string/page_title_room_order_activity"
                app:titleSize="@dimen/page_title_size_middle"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_14"
                        android:layout_marginVertical="@dimen/dp_20"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10">

                            <View
                                android:id="@+id/room_order_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="@dimen/dp_14"
                                android:background="#DADADA"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_order_room_type_short_intro" />

                            <TextView
                                android:id="@+id/tv_order_total_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_radius_corner"
                                android:paddingHorizontal="@dimen/dp_14"
                                android:paddingVertical="@dimen/dp_4"
                                android:textColor="@color/aquamarine_main"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_order_check_in_date"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                tools:text="7晚" />

                            <TextView
                                android:id="@+id/tv_order_check_out_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:gravity="end"
                                android:textColor="@color/homepage_text_light_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_order_total_day"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tv_order_total_day"
                                app:layout_constraintTop_toTopOf="@+id/tv_order_total_day"
                                tools:text="12月27日"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_order_room_type_short_intro"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_14"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_order_room_type_name" />

                            <TextView
                                android:id="@+id/tv_order_check_in_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:textColor="@color/homepage_text_light_black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/tv_order_total_day"
                                app:layout_constraintEnd_toStartOf="@+id/tv_order_total_day"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tv_order_total_day"
                                tools:text="12月20日"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_order_room_type_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_14"
                                android:textColor="@color/homepage_text_light_black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="@+id/tv_order_room_type_detail"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_order_check_in_date"
                                tools:text="房型名字" />

                            <TextView
                                android:id="@+id/tv_order_room_type_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_ze_arrow"
                                android:gravity="center"
                                android:text="@string/room_order_room_type_detail"
                                android:textColor="@color/aquamarine_main"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_order_room_type_name" />

                            <TextView
                                android:id="@+id/tv_order_room_type_intro"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:maxLines="7"
                                android:ellipsize="end"
                                android:layout_marginTop="@dimen/dp_14"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/room_order_line"
                                tools:text="介绍" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_14"
                        android:layout_marginVertical="@dimen/dp_20"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10">

                            <TextView
                                android:id="@+id/tv_room_order_card_title_check_in_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/room_order_title_check_in_info"
                                android:textColor="@color/homepage_text_light_black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/room_order_line2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="@dimen/dp_10"
                                android:background="#DADADA" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_14"
                                    android:text="@string/room_order_room_number"
                                    tools:text="房间数量" />

                                <TextView
                                    android:id="@+id/tv_order_room_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    tools:text="1" />

                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <View
                                android:id="@+id/room_order_line3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="@dimen/dp_10"
                                android:background="#DADADA" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_14"
                                    android:text="@string/room_order_guest_name"
                                    tools:text="住客姓名" />

                                <TextView
                                    android:id="@+id/tv_order_guest_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    tools:text="姓名" />

                                <Spinner
                                    android:id="@+id/spinner3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <View
                                android:id="@+id/room_order_line4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="@dimen/dp_10"
                                android:background="#DADADA" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_14"
                                    android:text="@string/room_order_phone_number"
                                    tools:text="联系手机" />

                                <TextView
                                    android:id="@+id/tv_order_guest_phone_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/room_order_phone_number_hint"
                                    tools:text="" />

                                <Spinner
                                    android:id="@+id/spinner2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_14"
                        android:layout_marginVertical="@dimen/dp_20"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/dp_10">

                            <TextView
                                android:id="@+id/tv_room_order_card_title_pay_online"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="@string/room_order_title_pay_online"
                                android:textColor="@color/homepage_text_light_black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/room_order_line1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/tv_room_order_card_title_pay_online"
                                android:layout_alignParentStart="true"
                                android:layout_marginVertical="@dimen/dp_10"
                                android:background="#DADADA" />

                            <TextView
                                android:id="@+id/tv_room_order_subtitle_room_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/room_order_line1"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:text="@string/room_order_subtitle_cost" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/tv_room_order_subtitle_room_cost"
                                android:layout_marginTop="9dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingStart="@dimen/page_padding_14dp"
                android:paddingEnd="@dimen/page_padding_14dp">

                <TextView
                    android:id="@+id/tv_room_order_bottom_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red_price"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="价格" />

                <android.widget.Button
                    android:id="@+id/btn_room_order_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_14"
                    android:layout_weight="2"
                    android:background="@drawable/button_radius"
                    android:text="@string/room_order_btn_text_submit"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </com.ranlychan.ktv.widget.SafeAreaFrameLayout>

</FrameLayout>